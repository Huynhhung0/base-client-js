{
  "name": "base",
  "version": "0.0.1",
  "description": "Base JS library for BASE-platform",
  "main": "Base.js",
  "scripts": {
    "test": "npm run remove-bitcore-lib-dep && mocha --timeout 10000 --recursive --require ts-node/register \"./test/**/*Test.ts\"",
    "testProfile": "npm run remove-bitcore-lib-dep && mocha --timeout 10000 --recursive --require ts-node/register $NODE_DEBUG_OPTION \"./test/profile/*Test.ts\"",
    "testValidator": "npm run remove-bitcore-lib-dep && mocha --timeout 10000 --recursive --require ts-node/register $NODE_DEBUG_OPTION \"./test/system/*Test.ts\"",
    "testRequest": "npm run remove-bitcore-lib-dep && mocha --timeout 10000 --recursive --require ts-node/register $NODE_DEBUG_OPTION \"./test/requests/*Test.ts\"",
    "coverage": "nyc npm run test",
    "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls",
    "remove-bitcore-lib-dep": "node remove-bitcore-lib-dep.js",
    "build": "npm run remove-bitcore-lib-dep && webpack"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "remove-bitcore-lib-dep.js",
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitclave/base-js.git"
  },
  "keywords": [
    "Bitclave",
    "Base",
    "JS",
    "Library",
    "CAT"
  ],
  "author": "Bitclave",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitclave/base-js/issues"
  },
  "homepage": "https://github.com/bitclave/base-js#readme",
  "dependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "ajv": "^6.3.0",
    "bitcore-ecies": "^1.0.3",
    "bitcore-lib": "^0.15.0",
    "bitcore-message": "^1.0.4",
    "bs58": "^4.0.1",
    "buffer-compare": "^1.1.1",
    "crypto-js": "^3.1.9-1",
    "eth-sig-util": "^1.4.2",
    "json-rpc-ws": "https://github.com/AndreyShashlov/json-rpc-ws/tarball/master",
    "rxjs": "^5.5.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.0.0-beta.40",
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "node-localstorage": "^1.3.0",
    "nyc": "^11.4.1",
    "ts-loader": "^3.4.0",
    "ts-node": "^4.1.0",
    "typedoc": "^0.9.0",
    "typedoc-webpack-plugin": "^1.1.4",
    "typescript": "^2.7.2",
    "webpack": "^3.10.0",
    "xmlhttprequest": "^1.8.0"
  }
}
