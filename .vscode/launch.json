    "version": "0.2.0",
    "configurations": [

      {
        "type": "node",
        "request": "launch",
        "name": "Offer test",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "-u",
          "tdd",
          "--timeout",
          "999999",
          "--colors",
          "--require",
          "ts-node/register",
          "${workspaceFolder}/test/offers/*.ts"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "perf test",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "-u",
          "tdd",
          "--timeout",
          "999999",
          "--colors",
          "--require",
          "ts-node/register",
          "${workspaceFolder}/test/system/PerfTester.ts"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "All test",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "-u",
          "tdd",
          "--timeout",
          "999999",
          "--colors",
          "--require",
          "ts-node/register",
          "${workspaceFolder}/test/**/*.ts"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/Bitclave-Base.js"
        }
    ]
}
